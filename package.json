{
  "name": "emd-logger-typescript",
  "version": "1.0.0",
  "description": "Embracing Microservices Design - Typescript Logger",
  "type": "module",
  "main": "src/index.ts",
  "author": "wkmaaj",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wkmaaj/emd-logger-typescript.git"
  },
  "engines": {
    "npm": "^9.5.0",
    "node": "^18.16.0"
  },
  "scripts": {
    "clean": "rm -rfv",
    "clean:artifacts": "npm run clean -- dist",
    "clean:complete": "npm run clean -- node_modules package-lock.json dist",
    "clean:dependencies": "npm run clean -- node_modules",
    "clean:refresh": "npm run clean -- node_modules dist",
    "compile": "swc src -d dist",
    "build": "npm run typecheck && npm run test && npm run compile",
    "build:clean": "npm run clean:complete && npm i && npm run build",
    "build:fresh": "npm run clean:dependencies && npm ci && npm run build",
    "build:redo": "npm run clean:artifacts && npm ci && npm run build",
    "format": "prettier -w .",
    "format:debug": "prettier --write --log-level debug .",
    "lint": "eslint -c .eslintrc --ext .js,.jsx,.ts,.tsx .",
    "major": "npm run build && npm version major",
    "minor": "npm run build && npm version minor",
    "patch": "npm run build && npm version patch",
    "prepare": "husky install",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "test": "echo \"Running tests...\" && jest",
    "typecheck": "tsc --skipLibCheck --noEmit"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "moment": "^2.29.4",
    "npm": "^9.8.0",
    "pino": "^8.14.1",
    "pino-abstract-transport": "^1.0.0",
    "pino-pretty": "^10.0.1",
    "safe-stable-stringify": "^2.4.3",
    "sonic-boom": "^3.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.1.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.69",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-prepush": "^2.2.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-properties": "^0.2.0",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-prepush"
    }
  },
  "lint-staged": {
    "*.+((j|t)sx?)": [
      "eslint . --fix"
    ],
    "*.+((j|t)sx?|json|css|md)": [
      "prettier . --write"
    ]
  }
}
